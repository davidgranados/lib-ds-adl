{
  "source": ["src/tokens/**/*.js"],
  "platforms": {
    "css": {
      "transforms": ["attribute/cti", "name/cti/kebab", "time/seconds", "content/icon", "size/rem"],
      "buildPath": "src/styles/",
      "files": [
        {
          "destination": "tokens.css",
          "format": "css/variables"
        }
      ],
      "options": {
        "outputReferences": true
      }
    }
  }
}
