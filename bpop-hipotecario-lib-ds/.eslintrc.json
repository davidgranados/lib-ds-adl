{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true,
    "mocha": true,
    "amd": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "react-hooks"],
  "settings": {
    "react": {
      "version": "detect",
      "prettier/prettier": "error",
      "max-len": [2, 120, 8]
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react-hooks/rules-of-hooks": 2,
    "require-jsdoc": "off"
  },
  "overrides": [
    {
      "files": ["**/*.stories.*"],
      "rules": {
        "import/no-anonymous-default-export": "off"
      }
    },
    {
      "files": "src/tokens/**/*.js",
      "rules": {
        "quote-props": [
          "error",
          "always",
          {
            "numbers": true
          }
        ]
      }
    },
    {
      "files": "*.d.ts",
      "rules": {
        "spaced-comment": "off"
      }
    }
  ]
}
